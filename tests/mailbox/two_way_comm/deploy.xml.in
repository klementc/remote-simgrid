<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4.1">
  <!-- "client" is the name it takes in [the logs of] the SimGrid world
       "./dumb_client" is the command that we have to fork+exec in the real world
   -->
  <actor host="PM0" function="node1">
     <argument value="@CMAKE_CURRENT_BINARY_DIR@/node1"/>
  </actor>
  <actor host="PM1" function="node2">
     <argument value="@CMAKE_CURRENT_BINARY_DIR@/node2"/>
  </actor>
  <actor host="PM2" function="node3">
     <argument value="@CMAKE_CURRENT_BINARY_DIR@/node3"/>
  </actor>
</platform>
